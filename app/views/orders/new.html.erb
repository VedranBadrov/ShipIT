<h1>New Order</h1>

<%= form_for @order do |f| %>
<div class="form-group">
  <%= f.label :start_destination %>
  <%= f.text_field :start_destination, class: 'form-control' %>
</div>
  <div class="form-group">
    <%= f.label :final_destination %>
    <%= f.text_field :final_destination, class: 'form-control' %>
  </div>
  <div class ="form-group">
    <%= f.label :quantity %>
    <%= f.text_field :quantity, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :goods_type %>
    <%= f.text_field :goods_type, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :additional_details %>
    <%= f.text_area :additional_details, class: 'form-control' %>
  </div>
  <%= f.submit 'Submit', class: 'btn btn-primary', type: 'submit' %>
  <% if flash[:notice] %>
  <div class="alert alert-success">
    <%= flash[:notice] %>
  </div>
  <% end %>

<% end %>
